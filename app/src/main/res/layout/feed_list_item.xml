<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/cardViewMarginLeftRight"
        android:layout_marginRight="@dimen/cardViewMarginLeftRight"
        android:layout_marginTop="@dimen/cardViewMarginTopBottom"
        android:layout_marginBottom="@dimen/cardViewMarginTopBottom"
        android:elevation="@dimen/cardViewElevation">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/firstLine"
                android:textStyle="bold"
                android:textColor="@color/colorBlueHeader"
                android:text="Murdochs needed counselling after hacking scandal, says magazine"/>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/secondLine"
                android:textColor="@android:color/black"
                android:layout_toLeftOf="@+id/imageViewRef"
                android:text="NEW YORK: The British phone-hacking scandal brought simmering tensions"/>
            <ImageView
                android:id="@+id/imageViewRef"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="@dimen/imageWidth"
                android:layout_height="@dimen/imageHeight"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/marginLeft"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
